<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.com.bium.board.mapper.BoardMapper">
    <!--  board 등록 기능 구현 전에 user 유무 확인  -->
    <select id="existsByUserId" resultType="boolean">
        SELECT COUNT(*) > 0
        FROM user
        WHERE user_id = #{userId}
        AND is_active = 1
    </select>

    <!--  board 등록 기능 구현  -->
    <insert id="insertBoard" parameterType="BoardDto" useGeneratedKeys="true" keyProperty="boardId">
        INSERT INTO board(user_id, board_title)
        VALUES (
                #{userId},
                #{boardTitle}
                )
    </insert>

    <!--  board 목록 조회 기능 구현  -->
    <select id="getBoard" resultType="BoardDto">
        SELECT
            board_id,
            board_title,
            created_at,
            updated_at
        FROM board
        ORDER BY board_id DESC
    </select>

    <!--  board 상세 조회 기능 구현  -->
    <select id="getByBoardId" resultType="BoardDto">
        SELECT
            board_id,
            board_title,
            created_at,
            updated_at
        FROM board
        WHERE board_id = #{boardId}
    </select>

    <!--  board 수정 기능 구현  -->
    <update id="updateBoard" parameterType="BoardDto">
        UPDATE board
        SET
            board_title = #{boardTitle},
            updated_at = NOW()
        WHERE board_id = #{boardId}
    </update>

    <!--  board 삭제 기능 구현  -->
    <update id="deleteBoard">
        UPDATE board
        SET is_active = 1
        WHERE board_id = #{boardId}
    </update>
</mapper>
